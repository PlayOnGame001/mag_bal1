<Window x:Class="mag_bal1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mag_bal1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="textBox" Grid.Row="0" Margin="10" Background="DarkKhaki" KeyUp="textBox_KeyUp"/>
        <Button x:Name="answer" Grid.Row="1" Content="Ответ на вопрос" Width="120" Margin="10" HorizontalAlignment="Left" Click="answer_Click" Background="Aquamarine" Foreground="Black" FontSize="14"/>
        <TextBlock x:Name="textBlock" Grid.Row="2" Margin="10" Background="DarkKhaki"/>
    </Grid>
</Window>
